<h1>Edit Product-Supplier Relationship</h1>

<form action="/product_supplier/update" method="POST">
    <input type="hidden" name="productID" value="{{product_supplier.ID}}">
    
    <label for="productName">Product:</label>
    <input type="text" id="productName" value="{{product_supplier.NAME}}" readonly><br><br>

    <label for="supplier">Supplier:</label>
    <select id="supplier" name="supplierID" required>
        {{#each suppliers}}
            <option value="{{this.SUPPLIER_ID}}" 
            {{#if (eq this.SUPPLIER_ID ../product_supplier.SUPPLIER_ID)}}selected{{/if}}>
                {{this.NAME}}
            </option>
        {{/each}}
    </select><br><br>

    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" value="{{product_supplier.QUANTITY}}" required><br><br>

    <label for="cost">Cost:</label>
    <input type="text" id="cost" name="cost" value="{{product_supplier.COST}}" required><br><br>

    <input type="submit" value="Save">
</form>
